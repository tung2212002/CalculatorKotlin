<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="46dp"
            tools:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="LifeCycle"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0.1dp"
        android:layout_marginLeft="0.9dp"
        android:layout_marginRight="0.1dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:text="0"
            android:gravity="end | center"
            android:textSize="100sp"
            android:background="@color/gray"

        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_clear_entry"
            style="@style/buttonComponent"
            android:onClick="clearEntryAction"
            android:text="CE"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_clear"
            style="@style/buttonComponent"
            android:onClick="clearAction"
            android:text="C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_backspace"
            style="@style/buttonComponent"
            android:onClick="backSpaceAction"
            android:text="BS"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_division"
            style="@style/buttonComponent"
            android:onClick="operatorAction"
            android:text="/"
            android:textSize="40sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/button_seven"
            style="@style/buttonComponent"
            android:backgroundTint="@color/gray_light"
            android:onClick="clickNumber"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_eight"
            style="@style/buttonComponent"
            android:backgroundTint="@color/gray_light"
            android:onClick="clickNumber"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_nine"
            style="@style/buttonComponent"
            android:backgroundTint="@color/gray_light"
            android:onClick="clickNumber"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_multiplication"
            style="@style/buttonComponent"
            android:onClick="operatorAction"
            android:text="x"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_four"
            style="@style/buttonComponent"
            android:backgroundTint="@color/gray_light"
            android:onClick="clickNumber"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_five"
            style="@style/buttonComponent"
            android:backgroundTint="@color/gray_light"
            android:onClick="clickNumber"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_six"
            style="@style/buttonComponent"
            android:backgroundTint="@color/gray_light"
            android:onClick="clickNumber"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_subtraction"
            style="@style/buttonComponent"
            android:onClick="operatorAction"
            android:text="-"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_one"
            style="@style/buttonComponent"
            android:backgroundTint="@color/gray_light"
            android:onClick="clickNumber"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_two"
            style="@style/buttonComponent"
            android:backgroundTint="@color/gray_light"
            android:onClick="clickNumber"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_three"
            style="@style/buttonComponent"
            android:backgroundTint="@color/gray_light"
            android:onClick="clickNumber"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_addition"
            style="@style/buttonComponent"
            android:onClick="operatorAction"
            android:text="+"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_reverse"
            style="@style/buttonComponent"
            android:onClick="clickNumber"
            android:text="+/-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_zero"
            style="@style/buttonComponent"
            android:backgroundTint="@color/gray_light"
            android:onClick="clickNumber"
            android:text="0"
            android:textSize="30sp"

            />

        <Button
            android:id="@+id/button_dot"
            style="@style/buttonComponent"
            android:text="."
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_equal"
            style="@style/buttonComponent"
            android:onClick="equalsAction"
            android:text="="
            android:textColor="@android:color/black"
            android:textSize="40sp" />
    </LinearLayout>

</LinearLayout>